package atividade3;

public class atividade3 {

	public static void main(String[] args) {
		String test = "aqui teste aqui teste aqui aqui";

		int cont = 0;		
		while(true) {

			int index = test.indexOf("aqui");

			if(index != -1) {
				test = test.substring(0, index) + "*" + test.substring(index); 
				cont++;
				System.out.println(test);
			}else {
				break;
			}

		}


	}
}
